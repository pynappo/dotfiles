[include]
  path = ~/.config/delta/themes.gitconfig
[user]
  email = pynappo@proton.me
  name = pynappo
  signingkey = ~/.ssh/id_ed25519.pub
[core]
  symlinks = true
  fsmonitor = true
  editor = nvim
  protectNTFS = false
  pager = delta
  packedGitLimit = 512m
  packedGitWindowSize = 512m
[pack]
  deltaCacheSize = 2047m
  packSizeLimit = 2047m
  windowMemory = 2047m
[init]
  defaultBranch = main
[pull]
	rebase = true
[push]
  autoSetupRemote = true
[gpg]
  format = ssh
[tag]
  gpgsign = true
[commit]
  gpgsign = true
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers
  defaultKeyCommand = ssh-add -L
[diff]
  colorMoved = default
  tool = nvimdiff
  context = 5
[difftool]
  prompt = false
  trustExitCode = true
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0
[delta]
	features = catppuccin-macchiato
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  hyperlinks = true
  side-by-side = false
  colorMoved = default
[merge]
  tool = nvimdiff
  conflictstyle = diff3
	autostash = true
[mergetool]
  trustExitCode = true
  keepBackup = false
[mergetool "diffview"]
  cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[safe]
  directory = *
[credential "https://dev.azure.com"]
	useHttpPath = true
[branch]
	sort = -committerdate
[alias]
	fpush = push --force-with-lease
	wdiff = diff --word-diff
  sdiff = diff --staged
  odiff = diff origin...
  s = status
  stat = status
  t = tag
  sclone = clone --filter=blob:none
	unstage = restore --staged
  z = switch
  l = lg
  lg = lg1
  lg-basic = log --graph --abbrev-commit --decorate
  lg1 = lg-basic --format=format:'%C(auto)%h %C(bold green)(%as)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  lg2 = lg-basic --format=format:'%C(auto)%h %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  lg3 = lg-basic --format=format:'%C(auto)%h %C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset) %C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset)%n''          %C(dim white)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'
  pl = pull
  ps = push
  dpush = push --dry-run
  dft = difftool
  df = diff
  difftastic = difftool -t difftastic
  difft = difftastic
  mergeview = mergetool -t diffview
  amend = commit --amend
[rebase]
  autoStash = true
[rerere]
  enabled = true
  autoUpdate = true
[credential]
	helper =
	helper = /usr/bin/git-credential-manager
  credentialStore = secretservice
[help]
	autocorrect = prompt
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
